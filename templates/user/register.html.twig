{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}
{% endblock %}

{% block body %}
<div class="container">
    <br /><br />
    <h1 class="pb-2 mt-3 text-center text-md-left"> Inscription </h1>

    <div class="col-xs-12 col-sm-12 w-75 d-flex justify-content-center px-0 justify-content-sm-start">                                    
        <div class="separator_gallery mx-0"></div>
    </div>

    {# Formulaire Register #}

    {{ form_start ( form ) }}
            <hr>

        <h4 class="text-center" >Votre compte</h4>
        <div class="row">
            <div class="col-6">
                {{ form_row ( form.username ) }}
            </div>
            <div class="col-6">
                {{ form_row ( form.plainpassword ) }}
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                {{ form_row ( form.firstname ) }}
            </div>
            <div class="col-6">
                {{ form_row ( form.lastname ) }}
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                {{ form_row ( form.email ) }}
            </div>
            <div class="col-6">
                {{ form_row ( form.phone ) }}
            </div>
        </div>
        <br />
        <hr>
        <h4 class="text-center" >Votre adresse</h4>
        <div class="row">
            <div class="col">
                {{ form_row ( form.addressBillingId.street ) }}
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                {{ form_row ( form.addressBillingId.zip_code ) }}
            </div>
            <div class="col-6">
                {{ form_row ( form.addressBillingId.city ) }}
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                {{ form_row ( form.addressBillingId.country ) }}
            </div>
        </div>
                <hr>

        <div class="row text-center">
            <div class="col-12">
                {{ form_row ( form.submit ) }}
            </div>
        </div>
    </div>
    {{ form_end ( form ) }}

{% endblock %}