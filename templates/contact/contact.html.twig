{% extends 'base.html.twig' %}

{% block title %} {{ controller_name }} | {{ parent() }} {% endblock %}
{% block header %}<meta name="Page Contact"="Contactez-nous et/ou proposez-nous vos idées!">{% endblock header %}
{% block body %}

<!-- //////////////////////// CONTENU DE LA PAGE ////////////////////////// -->
<section class="container-fluid px-0 produit_gallery pb-1">
  
  <!-- Titre de la page -->
  <div class="container text-center pt-5 pb-2 position-relative">
    <div class="row d-flex justify-content-between">
     
        <!-- Titre -->
        <div class="col-xs-12 col-sm-8 pb-4 px-0">
            <div class="col-12 pb-2 text-center text-md-left">                   
                <h2>
                  Nous <span class="text-bleu">{{ controller_name }}er</span>
                </h2>
            </div>
            <div class="col-xs-12 col-sm-12 d-flex justify-content-center justify-content-sm-start">                                    
                <div class="separator_gallery mx-0"></div>
            </div>
        </div>

    </div>
  </div>
  
</section>


<!-- ////////////////// FORMULAIRE de CONTACT /////////////////////////// -->

<div class="container contact pt-0">
    <div class="row">
        <div class="col-md-7"> <!-- formulaire -->
            <div class= "champs">Les champs précédés d'une * sont <span>obligatoires</span></div>

            <form method= "POST">
                <div class="col-auto">

                      {{ form_start (form)}}
                      {{ form_widget (form)}}
                      <div class="btn_motifs text-center">
                          <button type="submit" class="rounded-0 mt-4 py-2 px-5 btn-envoyer ">
                              Envoyer
                          </button>
                      </div>
                      {{ form_end (form)}}

                </div> <!-- fin col-auto -->
            </form>
        </div> <!-- fin col-md-7-->


<!-- ////////////////// GOOGLE MAP /////////////////////////// -->

        <div class="col-md-5 mt-5"> 
            <div class="map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2529.9822615576736!2d3.073785515738492!3d50.6460205795028!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c32a0cd483c20f%3A0x5151a22a084d3ded!2s110+Avenue+de+la+R%C3%A9publique%2C+59110+La+Madeleine!5e0!3m2!1sfr!2sfr!4v1543161040050" 
                        height="400" frameborder="0" style="border:0"></iframe>
            </div>
            
            <div class="address"><strong>DEV My Shirts </strong><br><br>
                                110 avenue de la République <br>
                                59110 LA MADELEINE <br>
                                Tél : 03.20.10.10.10 <br>
                                <a href="mailto:dev-my-shirt@gmail.com"> dev-my-shirt@gmail.com </a>      
            </div>
        </div> <!-- fin col-md-5-->

    </div> <!-- fin div raw-->

</div> <!-- fin du container contact-->

{% endblock %}
